<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:zcml="http://namespaces.zope.org/zcml">

  <include
  	zcml:condition="not-installed ZPublisher.interfaces"
    package="ZPublisherEventsBackport"
    />

  <subscriber for="ZPublisher.interfaces.IPubBeforeCommit"
              handler=".events.GrayscaleTransformations" />
  <subscriber for="ZPublisher.interfaces.IPubAfterTraversal"
              handler=".events.GrayscaleTransformations" />
              
</configure>
